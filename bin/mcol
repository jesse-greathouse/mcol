#!/usr/bin/perl

use strict;
use warnings;
use Cwd qw(getcwd abs_path);
use File::Basename;
use lib(dirname(abs_path(__FILE__))  . "/modules");
use Mcol::Instance qw(instance_start instance_restart instance_stop);
use Mcol::Queue qw(queue_start queue_restart queue_stop);
use Mcol::Web qw(web_start web_restart web_stop);

warn $@ if $@; # Handle exceptions

# Action is the first arg (start, restart, stop)
my ($action) = @ARGV;

if (not defined $action) {
  die "Available actions are start, restart and stop.\n";
}

if ("start" eq $action) {
    web_start();
    instance_start();
    queue_start();
} elsif ("restart" eq $action) {
    web_restart();
    instance_restart();
    queue_restart();
} elsif ("stop" eq $action) {
    queue_stop();
    instance_stop();
    web_stop();
} else {
    die "Available actions are start, restart and stop.\n";
}
